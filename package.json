{
	"devDependencies": {
		"@biomejs/biome": "^2.1.4",
		"@changesets/cli": "^2.29.5",
		"@types/bun": "^1.2.19",
		"@types/jsdom": "^21.1.7",
		"cspell": "^9.2.0",
		"husky": "^9.1.7",
		"jsdom": "^26.1.0",
		"markdownlint-cli2": "^0.18.1",
		"typedoc": "^0.28.9",
		"typedoc-plugin-markdown": "^4.8.0",
		"typescript": "^5.9.2",
		"zshy": "^0.3.5"
	},
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs",
			"types": "./dist/index.d.cts"
		}
	},
	"files": [
		"dist",
		"LICENSE.md",
		"package.json",
		"README.md"
	],
	"license": "MIT",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"name": "kitto-form",
	"private": false,
	"scripts": {
		"build": "bun run docs:generate && zshy && biome check --write ./package.json",
		"check:code": "biome check . --diagnostic-level=error",
		"check:md": "markdownlint-cli2 --config=./.markdownlint.json",
		"check:spell": "cspell --no-progress .",
		"check:types": "tsc --noEmit",
		"commit": "bun run scripts/commit.ts",
		"docs:generate": "typedoc --plugin typedoc-plugin-markdown --out docs src/index.ts --readme none --hideGenerator --hideBreadcrumbs",
		"prepare": "husky",
		"release": "bun run build && changeset version && changeset publish",
		"test": "bun test"
	},
	"type": "module",
	"types": "./dist/index.d.cts",
	"version": "0.0.1",
	"zshy": {
		"exports": {
			".": "./src/index.ts"
		}
	}
}
